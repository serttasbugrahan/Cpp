class Point {

public:
point(double x, double y) : mx{x}, my{y} {}
void print()const
{
std::cout << "(" << mx << ", " << my << ")\n";
}
private:
double mx, my;
};

int main()
{
Point p1{4., 7.};
p1.print();
}

